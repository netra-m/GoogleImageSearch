<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yahoo.netram.googleimagesearch.activities.SearchSettingsActivity">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_marginTop="50dp"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:layout_width="120dp"
                android:paddingLeft="10dp"
                android:text="Image Size: " />

            <Spinner
                android:id="@+id/size_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/image_size_array"
                android:gravity="right" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="120dp"
                android:paddingLeft="10dp"
                android:text="Color Filter: " />

            <Spinner
                android:id="@+id/color_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/image_color_array"
                android:gravity="right" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="120dp"
                android:paddingLeft="10dp"
                android:text="Image Type: " />

            <Spinner
                android:id="@+id/type_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/image_type_array"
                android:gravity="right" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="120dp"
                android:paddingLeft="10dp"
                android:text="Site Filter: " />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/etSiteFilter"/>

        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Save"
        android:id="@+id/btnSave"
        android:onClick="saveSettings" />

</RelativeLayout>
